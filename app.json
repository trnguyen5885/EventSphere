{
  "expo": {
    "name": "EventSphere",
    "slug": "EventSphere",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to location when open to show nearby events.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to location when in the background for location tracking.",
        "NSLocationAlwaysUsageDescription": "This app needs access to location when in the background."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
      "ACCESS_COARSE_LOCATION",
      "ACCESS_FINE_LOCATION",
      "ACCESS_BACKGROUND_LOCATION" ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(EventSphere) to use your location.",
          "locationAlwaysPermission": "Allow $(EventSphere) to use your location.",
          "locationWhenInUsePermission": "Allow $(EventSphere) to use your location.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ]
    ],
    "fonts": [
      {
        "asset": "./assets/fonts/Poppins-Black.ttf",
        "family": "Poppins-Black"
      },
      {
        "asset": "./assets/fonts/Poppins-Bold.ttf",
        "family": "Poppins-Bold"
      },
      {
        "asset": "./assets/fonts/Poppins-ExtraBold.ttf",
        "family": "Poppins-ExtraBold"
      },
      {
        "asset": "./assets/fonts/Poppins-Light.ttf",
        "family": "Poppins-Light"
      },
      {
        "asset": "./assets/fonts/Poppins-LightItalic.ttf",
        "family": "Poppins-LightItalic"
      },
      {
        "asset": "./assets/fonts/Poppins-Medium.ttf",
        "family": "Poppins-Medium"
      },
      {
        "asset": "./assets/fonts/Poppins-MediumItalic.ttf",
        "family": "Poppins-MediumItalic"
      },
      {
        "asset": "./assets/fonts/Poppins-Regular.ttf",
        "family": "Poppins-Regular"
      },
      {
        "asset": "./assets/fonts/Poppins-SemiBold.ttf",
        "family": "Poppins-SemiBold"
      }
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
